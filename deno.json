{
  "name": "@wyattjoh/claude-sync",
  "version": "0.2.2",
  "license": "MIT",
  "exports": "./src/main.ts",
  "publish": {
    "include": ["LICENSE", "README.md", "src/**/*.ts", "deno.json"],
    "exclude": ["src/testdata/", "src/fixtures/", "tests/"]
  },
  "tasks": {
    "dev": "deno run --watch --allow-read --allow-write --allow-env --allow-run src/main.ts",
    "test": "deno test --allow-read --allow-write --allow-env --allow-run",
    "lint": "deno lint",
    "fmt": "deno fmt",
    "build": "deno compile --allow-read --allow-write --allow-env --allow-run --output=claude-sync src/main.ts",
    "check": "deno check src/**/*.ts"
  },
  "imports": {
    "@cliffy/command": "jsr:@cliffy/command@^1.0.0-rc.4",
    "@cliffy/table": "jsr:@cliffy/table@^1.0.0-rc.4",
    "@cliffy/prompt": "jsr:@cliffy/prompt@^1.0.0-rc.4",
    "@std/fs": "jsr:@std/fs@^1.0.2",
    "@std/path": "jsr:@std/path@^1.0.3",
    "@std/yaml": "jsr:@std/yaml@^1.0.3",
    "@std/fmt": "jsr:@std/fmt@^1.0.1"
  },
  "fmt": {
    "useTabs": false,
    "lineWidth": 100,
    "indentWidth": 2,
    "semiColons": true,
    "singleQuote": false,
    "proseWrap": "preserve"
  },
  "lint": {
    "include": ["src/"],
    "exclude": ["src/testdata/", "src/fixtures/"],
    "rules": {
      "tags": ["recommended"]
    }
  }
}
